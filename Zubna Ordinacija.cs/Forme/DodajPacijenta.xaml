        <TextBox Name="txtKontakt" HorizontalAlignment="Left" Margin="123,286,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="164" Height="28"/>
        <Label Content="Medicinski karton:" HorizontalAlignment="Left" Margin="31,334,0,0" VerticalAlignment="Top" FontWeight="Black"/>
        <ComboBox Name="cbMedicinskiKarton" HorizontalAlignment="Left" Margin="156,336,0,0" VerticalAlignment="Top"  DisplayMemberPath="MedicinskiKartonID" SelectedValuePath="medicinskiKartonID" Width="170" Height="24"/>
